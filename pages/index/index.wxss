/* 首页 */
.slider {
    width: 650rpx;
    margin: 100rpx auto;
}

.task_text {
    margin: 50rpx auto;
    text-align: center;
}

.task_text .task_title {
    font-size: large;
    height: 70rpx;
}

.task_text .task_desc {
    color: #999999;
}

.task_cate {
    margin: 50rpx auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
}

.task_cate .task_item {
    width: 200rpx;
    height: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.task_cate .task_item .cate_icon image {
    width: 50rpx;
    height: 50rpx;
}

.task_cate .cate_text_active {
    background-color: #d6735f;
}

.start {
    width: 280rpx;
    height: 90rpx;
    line-height: 85rpx;
    text-align: center;
    color: #d6735f;
    margin: 0 auto;
    border: 2rpx #d6735f solid;
    border-radius: 20rpx;
}

/* 倒计时页 */
/* 倒计时钟 */
.clock {
    overflow: hidden;
    height: 100vh;
    background-color: #d6735f;
}

.progress {
    
    width: 400rpx;
    height: 400rpx;
    background-color: orangered;
    border-radius: 50%;
    margin: 140rpx auto;
    position: relative;
}

.progress .progress_bg, .progress .progress_active {
    position: absolute;
    left: 0;
    top: 0;
    width: 400rpx;
    height: 400rpx;
}

.progress .progress_text {
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: large;
    color: white;
    text-align: center;
    position: absolute;
    left: 120rpx;
    top: 170rpx;
}

/* 按钮 */

.btns .back_btn, .btns .pause_btn, .btns .continue_btn, .btns .quit_btn {
    width: 150rpx;
    height: 80rpx;
    color: white;
    line-height: 80rpx;
    border: 1px white solid;
    border-radius: 20rpx;
    text-align: center;
    margin: 20rpx auto;
}